{
	"compilerOptions": {
        "jsx": "react",
		"allowJs": true,
		"target": "ES5",
		"module": "NodeNext",
		"strict": true, // change later
		"lib": ["ESNext", "dom"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",  // Adjust this based on your project structure
		"outDir": "./dist",  // Adjust this based on your project structure
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "../../emath.js/dist/**/*"],
	"exclude": [
	  	"node_modules/"
	]
}